{
  "name" : "TON Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghrc.io/devcontainers/features/node:1": {
      "version": "latest"
    }
  },
      "postCreateCommand": "npm install -g npm@latest && bash .devcontainer/setup.sh",
      "customizations": {
        "vscode": {
          "extensions": [
            "ms-vscode.cpptools",
            "ms-vscode.vscode-typescript-next",
            "rust-lang.rust-analyzer"
          ]
        }
      }
}
